<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".Organizacion.ORG03VerMasEventoActivity">

    <android.support.constraint.ConstraintLayout
        android:background="@drawable/borde"
        android:id="@+id/linearLayout6"
        android:layout_width="368dp"
        android:layout_height="148dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43">

        <ImageView
            android:id="@+id/imgOrganizacion"
            android:layout_width="126dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:src="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvNomEvento"
            android:layout_width="220dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nombre de evento o Actividad"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgOrganizacion"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Fecha y Hora: "
            app:layout_constraintStart_toEndOf="@+id/imgOrganizacion"
            app:layout_constraintTop_toBottomOf="@+id/txvNomEvento" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Ubicación:"
            app:layout_constraintStart_toEndOf="@+id/imgOrganizacion"
            app:layout_constraintTop_toBottomOf="@+id/textView38" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Desde:"
            app:layout_constraintStart_toEndOf="@+id/imgOrganizacion"
            app:layout_constraintTop_toBottomOf="@+id/textView39" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Valoración:"
            app:layout_constraintStart_toEndOf="@+id/imgOrganizacion"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="dd/mm hh:mm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toEndOf="@+id/textView38"
            tools:layout_editor_absoluteY="39dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvDirec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Dirección"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toEndOf="@+id/textView39"
            tools:layout_editor_absoluteY="66dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvDesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="20 soles"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView40"
            app:layout_constraintTop_toBottomOf="@+id/txvDirec" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:textColor="@color/md_white_1000"
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="COMENTARIOS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout7"
        android:layout_width="368dp"
        android:layout_height="127dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:src="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nombre de Usuario"
            app:layout_constraintBottom_toTopOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:background="@drawable/borde"
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView48"
            android:layout_width="226dp"
            android:layout_height="74dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="Comentario de un usuario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvUsuario" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:textColor="@color/md_white_1000"
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Mis Eventos"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>