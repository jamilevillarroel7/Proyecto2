<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".Cliente.CL05ListaEventosActivity">

    <EditText
        android:id="@+id/etxtBuscar"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:textColorHint="@color/md_white_1000"
        android:background="@drawable/borde"
        android:hint="Buscar"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-2dp" />

    <Spinner

        android:id="@+id/spnCategoria"
        android:layout_width="127dp"
        android:layout_height="34dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/etxtBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rgFiltros"
        android:layout_width="343dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="46dp"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rbNuevos"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:buttonTint="@android:color/background_light"
            android:text="Nuevos"
            android:textColor="@color/md_white_1000"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp" />

        <RadioButton
            android:id="@+id/rbPopulares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:buttonTint="@android:color/background_light"
            android:text="Populares"
            android:textColor="@color/md_white_1000"
            app:layout_constraintEnd_toStartOf="@+id/rbCerca"
            app:layout_constraintStart_toEndOf="@+id/rbNuevos"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/rbCerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/background_light"
            android:text="Cerca de Ti"
            android:textColor="@color/md_white_1000"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="0dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:background="@drawable/borde"
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="225dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgFiltros">

        <TextView
            android:id="@+id/txvNomEvento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nombre del evento y/o Actividad"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="118dp"
            android:layout_height="183dp"
            app:srcCompat="@android:color/darker_gray"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="33dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:textColor="@color/md_white_1000"
            android:background="@drawable/borde"
            android:id="@+id/btnVerMas"
            android:layout_width="221dp"
            android:layout_height="35dp"
            android:text="Ver Más"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="180dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizacion"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="41dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora:"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="71dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación:"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="105dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desde:"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="138dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvOrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Org"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="41dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yyy - hh:mm"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="71dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvUbic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección Calle"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="105dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/txvCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo del evento"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="138dp"
            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>