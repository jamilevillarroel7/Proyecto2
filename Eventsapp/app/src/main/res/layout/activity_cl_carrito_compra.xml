<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cl_carritoCompra">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Carrito de compras"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="75dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="344dp"
        android:layout_height="224dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="134dp"
            android:layout_height="230dp"
            app:srcCompat="@android:color/black"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="-9dp" />

        <TextView
            android:id="@+id/txvEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nombre de Evento"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de evento"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="39dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="95dp" />

        <TextView
            android:id="@+id/txvTipoEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concierto"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="39dp" />

        <TextView
            android:id="@+id/txvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 soles"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="68dp" />

        <TextView
            android:id="@+id/txvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 unidades"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="95dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="125dp" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="185dp"
            android:layout_height="35dp"
            android:text="Eliminar"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="170dp" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="PAGAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>